

<h1 class="text-center my-4">My Kitchens</h1>

<div class="container">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Address</th>
        <th scope="col">Kitchen Type</th>
        <th scope="col">Description</th>
        <th scope="col">Daily Rate</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @kitchens.each do |kitchen| %>
        <tr>
          <td><%= kitchen.address %></td>
          <td><%= kitchen.kitchen_type %></td>
          <td><%= kitchen.description %></td>
          <td><%= number_to_currency(kitchen.daily_rate) %></td>
          <td>
            <%= link_to 'Show', kitchen, class: 'btn btn-primary btn-sm' %>
            <%# <%= link_to 'Edit', edit_kitchen_path(kitchen), class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Delete', kitchen, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h1 class="text-center my-4">Incoming Requests</h1>

<%# RESERVATIONS %>




<div class="container">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Kitchen</th>
        <th scope="col">Start Date</th>
        <th scope="col">End Date</th>
        <th scope="col">Total Price</th>
        <th scope="col">Accepted/Declined</th>
      </tr>
    </thead>
    <tbody>
      <% @kitchens.each do |kitchen| %>
	      <% kitchen.reservations.each do |reservation| %>
        <%# <%= reservation.user %>
        <div data-controller="status-button">
          <tr>
            <td><%= "#{reservation.user.first_name} #{reservation.user.last_name}" %></td>
            <td><%= reservation.kitchen.name %></td>
            <td><%= reservation.start_date %></td>
            <td><%= reservation.end_date %></td>
            <td><%= reservation.total_price %></td>
            <td><%= reservation.status %></td>
            <td>
              <%= button_to 'Accept', reservation_path(reservation, reservation: {status: 'accepted'}), method: :patch, class: 'btn btn-primary btn-sm' %>
              <%# <%= link_to 'Edit', edit_kitchen_path(kitchen), class: 'btn btn-secondary btn-sm' %>
              <%= button_to 'Decline', reservation_path(reservation, reservation: {status: 'declined'}), method: :patch, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        </div>
	      <% end %>
      <% end %>
    </tbody>
  </table>
</div>


