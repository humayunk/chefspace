<div class="container">
  <h2>Confirmation & Pay</h2>

  <div class="row">
    <!-- Left Column: Payment Form -->
    <div class="col-md-8">
      <div class="mb-4">
        <h3>Your Reservation</h3>

        <h4>Dates</h4>
        <p><%= @reservation.start_date %> - <%= @reservation.end_date %></p>
      </div>

      <div>
        <h3>Payment Details</h3>

        <form class="form-horizontal">
          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label" for="card_number">Card Number</label>
            <div class="col-sm-9">
              <input type="text" id="card_number" class="form-control" placeholder="Card Number">
            </div>
          </div>

          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label" for="expiration_date">Expiration Date</label>
            <div class="col-sm-9">
              <input type="date" id="expiration_date" class="form-control">
            </div>
          </div>

          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label" for="cvv">CVV</label>
            <div class="col-sm-9">
              <input type="text" id="cvv" class="form-control" placeholder="CVV">
            </div>
          </div>

          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label" for="cardholder_name">Cardholder Name</label>
            <div class="col-sm-9">
              <input type="text" id="cardholder_name" class="form-control" placeholder="Cardholder Name">
            </div>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary">Confirm reservation</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Right Column: Reservation Details -->
    <div class="col-md-4">
      <div>
        <h3>Reservation Details</h3>

        <h4>Kitchen</h4>
        <p><%= @kitchen.name %></p>

        <h4>Address</h4>
        <p><%= @kitchen.address %></p>

        <h4>Price</h4>
        <p>TBD</p>
      </div>
    </div>
  </div>
</div>
