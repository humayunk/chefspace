<div class="container mt-5">
  <div class="card mx-auto bg-white p-5" style="max-width: 600px;">
    <div class="card-body text-center">
      <h2 class="card-title">Confirmation</h2>
      <div class="my-3">
        <i class="fa-regular fa-circle-check fa-3x text-primary"></i>
        <h3 class="mt-3">Reservation successfully submitted!</h3>
      </div>
      <div class="text-left mt-4">
        <div class="mb-2">
          <div class="mt-3 mb-4"><h4>Reservation details</h4></div>
          <h5>Kitchen</h5>
          <p><%= @kitchen.name %></p>
          <h5>Address</h5>
          <p><%= @kitchen.address %></p>
          <h5>Dates</h5>
          <p>From <%= @kitchen.reservations[0].start_date %> to <%= @kitchen.reservations[0].end_date %></p>
          <h5>Total price</h5>
          <p class="price"><%= @kitchen.reservations[0].total_price %>$</p>
        </div>
      </div>
      <div class="text-center mt-4">
        <%= link_to "Browse more kitchens", kitchens_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
