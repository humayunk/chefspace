<div class="container-new-reservation">
    <h2>Confirmation</h2>

    <div class="card-message my-3">
      <div class="card-checkmark">
        <i class="fa-regular fa-circle-check"></i>
      </div>
      <h3>Reservation successfully submitted!</h3>
    </div>

    <div class="new-reservation">
        <div class="mb-2">
            <div class="mt-3 mb-4"><h4>Reservation details</h4></div>
            <h5>Kitchen</h5>
            <p><%= @kitchen.name %></p>
            <h5>Address</h5>
            <p><%= @kitchen.address %></p>
            <h5>Dates</h5>
            <p>From <%= @kitchen.reservations[0].start_date %> to <%= @kitchen.reservations[0].end_date %></p>
            <h5>Total price</h5>
            <p class="price"><%= @kitchen.reservations[0].total_price %>$</p>
        </div>
    </div>


    <div class="text-center mt-3">
        <div class="btn btn-primary" >
          <%= link_to "Browse more kitchens", kitchens_path, style: "color: white; text-decoration: none;" %>
        </div>
    </div>
</div>
